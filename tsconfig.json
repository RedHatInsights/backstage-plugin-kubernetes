{
  "extends": "@backstage/cli/config/tsconfig.json",
  "include": [
    "packages/*/src",
    "plugins/*/src",
    "plugins/*/dev",
    "plugins/*/migrations"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "dist-types",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@redhatinsights/backstage-plugin-kubernetes": ["./plugins/kubernetes"]
    },
    "moduleResolution": "Bundler",
  },

}
